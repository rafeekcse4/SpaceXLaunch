<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/brand_white"
    android:layout_marginTop="2dp"
    android:padding="@dimen/brand_padding_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_txt_mission_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mission_name::FalconSat"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/brand_textsize_title"/>

    <TextView
        android:id="@+id/id_txt_launch_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2006"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/brand_textsize_message"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/id_txt_flightid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlightId ::13"
        android:textSize="@dimen/brand_textsize_message"/>
    <TextView
        android:id="@+id/id_txt_launchstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="launch_success::trus"
        android:textSize="@dimen/brand_textsize_message"/>
</LinearLayout>