<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/brand_white"
    android:layout_marginTop="2dp"
    android:padding="@dimen/brand_padding_layout">
    <TextView
        android:id="@+id/id_txt_fragment_ltxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="FlightId ::13"
        android:gravity="left"
        android:textSize="@dimen/brand_textsize_message"/>
    <TextView
        android:id="@+id/id_txt_fragment_rtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="launch_success::trus"
        android:textSize="@dimen/brand_textsize_message"/>
</LinearLayout>